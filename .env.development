# Neurosurgical Knowledge Management System - Development Configuration
# Copy this file to .env and configure your settings

# Application
APP_NAME="Neurosurgical Knowledge System"
VERSION=2.0.0-simplified
DEBUG=True

# Database
DATABASE_URL=postgresql+asyncpg://neurosurg:neurosurg123@localhost:5432/neurosurgical_knowledge

# Redis Cache (optional - system works without it)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# AI Services (all optional - system uses mock responses if not provided)
# Get your keys from:
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/
# Google: https://makersuite.google.com/app/apikey
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
PERPLEXITY_API_KEY=

# Medical APIs (optional)
PUBMED_API_KEY=

# File Storage
TEXTBOOKS_PATH=./textbooks
STORAGE_PATH=./storage
TEMP_PATH=./temp

# Content Processing
MAX_FILE_SIZE_MB=100
MAX_SOURCES_PER_SYNTHESIS=15
MIN_RELEVANCE_SCORE=0.3

# Feature Flags
ENABLE_BEHAVIORAL_LEARNING=True
ENABLE_CITATION_NETWORK=True
ENABLE_EXTERNAL_SEARCH=True
ENABLE_MEDICAL_VALIDATION=True

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
