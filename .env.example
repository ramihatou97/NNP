# ============================================
# Neurosurgical Knowledge Management System
# Environment Variables Configuration
# ============================================

# Application Settings
ENVIRONMENT=development
DEBUG=False
SECRET_KEY=your-secret-key-must-be-at-least-32-characters-long
APP_NAME="Neurosurgical Knowledge Management System"
APP_VERSION=2.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://neurosurg:secure_password@localhost:5432/neurosurgical_knowledge
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DB_PASSWORD=neurosurg_secure_password

# Redis Cache
REDIS_URL=redis://:redis_secure_password@localhost:6379/0
REDIS_PASSWORD=redis_secure_password
CACHE_TTL_SECONDS=3600

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=neurosurg

# Vector Database (Choose one)
VECTOR_DB_TYPE=pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=neurosurgical-knowledge

# AI Service API Keys
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-opus-20240229

GOOGLE_API_KEY=...
GEMINI_MODEL=gemini-1.5-pro

PERPLEXITY_API_KEY=pplx-...

# Medical APIs
PUBMED_API_KEY=...
PUBMED_RATE_LIMIT=10

# AWS S3 Configuration (Optional)
USE_S3=False
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
S3_BUCKET=neurosurgical-storage
S3_REGION=us-east-1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@neurosurgicalknowledge.com

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM=HS256

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
ALLOWED_HOSTS=["localhost","127.0.0.1"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Celery Configuration
CELERY_BROKER_URL=redis://:redis_secure_password@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis_secure_password@localhost:6379/2
CELERY_TASK_TIME_LIMIT=600

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=True
LOG_LEVEL=INFO

# Flower (Celery Monitoring)
FLOWER_USER=admin
FLOWER_PASSWORD=admin

# PgAdmin
PGADMIN_EMAIL=admin@neurosurg.com
PGADMIN_PASSWORD=admin

# MinIO (S3 Alternative)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NODE_ENV=development

# Feature Flags
ENABLE_BEHAVIORAL_LEARNING=True
ENABLE_CITATION_NETWORK=True
ENABLE_EXTERNAL_SEARCH=True
ENABLE_NUANCE_MERGE=True
ENABLE_MEDICAL_VALIDATION=True

# Neurosurgery-Specific Features
ENABLE_DICOM_SUPPORT=True
ENABLE_NEURONAVIGATION=False
ENABLE_SURGICAL_PLANNING=False
ENABLE_3D_VISUALIZATION=False

# Default Settings
DEFAULT_SPECIALTY=neurosurgery
MAX_FILE_SIZE_MB=100
MAX_SOURCES_PER_SYNTHESIS=20
MIN_RELEVANCE_SCORE=0.3
SYNTHESIS_TIMEOUT_SECONDS=300

# Security Settings (Production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY